# Database Configuration
DATABASE_URL=postgresql://qnt9_user:qnt9_password@localhost:5432/qnt9_search

# Redis Configuration (optional but recommended)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# External API Settings
YAHOO_FINANCE_TIMEOUT=5.0
YAHOO_FINANCE_MAX_RETRIES=3
YAHOO_FINANCE_RATE_LIMIT=5  # requests per second

# Cache Settings
REDIS_CACHE_TTL_SECONDS=300  # 5 minutes
POSTGRES_CACHE_TTL_MINUTES=5

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60  # seconds

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Security (optional)
# API_KEY_ENABLED=false
# API_KEY_HEADER=X-API-Key
# ALLOWED_API_KEYS=key1,key2,key3

# Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_IP=100  # per minute
# RATE_LIMIT_WINDOW=60  # seconds
