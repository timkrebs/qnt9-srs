# Database Configuration
# Choose one of the following options:

# Option 1: Direct database URL
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname
# DATABASE_URL=sqlite:///./test.db

# Option 2: Vault configuration (preferred for production)
# VAULT_ADDR=https://your-vault-cluster.vault.cloud:8200
# VAULT_NAMESPACE=admin
# VAULT_TOKEN=your-vault-token-here

# Datadog APM & Application Security Configuration
DD_SERVICE=auth-service
DD_ENV=dev
DD_VERSION=1.0.0
DD_LOGS_INJECTION=true
DD_PROFILING_ENABLED=true
DD_DATA_STREAMS_ENABLED=true
DD_TRACE_REMOVE_INTEGRATION_SERVICE_NAMES_ENABLED=true

# Datadog Application Security (ASM)
DD_APPSEC_ENABLED=true
DD_IAST_ENABLED=true
DD_APPSEC_SCA_ENABLED=true

# Git Integration (for source code linking in Datadog)
DD_GIT_REPOSITORY_URL=github.com/timkrebs/qnt9-srs
# DD_GIT_COMMIT_SHA=  # Auto-populated in CI/CD
# DD_GIT_BRANCH=      # Auto-populated in CI/CD

# Datadog Agent Configuration (for containerized environments)
# DD_AGENT_HOST=localhost
# DD_TRACE_AGENT_PORT=8126

# For local development without Datadog Agent
DD_TRACE_AGENT_TIMEOUT=1
DD_TRACE_STARTUP_LOGS=false

# Debug (set to true for verbose Datadog tracing logs)
# DD_TRACE_DEBUG=false

# JWT Configuration (use strong secret in production!)
# SECRET_KEY=your-secret-key-here
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
