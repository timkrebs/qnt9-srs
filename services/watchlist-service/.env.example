# Watchlist Service Configuration

# Service Settings
SERVICE_NAME=watchlist-service
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8012
DEBUG=True
LOG_LEVEL=INFO

# JWT Authentication (must match auth-service)
JWT_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256

# Supabase Configuration (required for OAuth token validation)
# Get this from your Supabase project settings (https://supabase.com/dashboard/project/_/settings/api)
SUPABASE_URL=https://your-project.supabase.co

# Supabase Database
DATABASE_URL=postgresql://postgres.[USER]:[PASSWORD]@[DB]:6543/postgres?sslmode=require

# Tier Limits
FREE_TIER_WATCHLIST_LIMIT=10
PAID_TIER_WATCHLIST_LIMIT=999

# CORS Settings
CORS_ORIGINS=http://localhost:8080,http://localhost:3000
